<h1> Search our athletes </h1>

<%= form_tag users_path, method: :get do %>
  <div class="search-form-control form-group">
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find new superstar"
  %>
  <%= submit_tag "Search", class: "btn btn-success" %>
  </div>
<% end %>

<div class="container">
  <% @users.each do |user| %>
    <div class="card">
      <div class="card-body">
        <h2>
          <%= link_to user.first_name, user_path(user)%>
          <%= link_to user.last_name, user_path(user)%>
            <% if user.gender == "Male" %>
              <i class="fas fa-mars"></i>
            <% else %>
              <i class="fas fa-venus"></i>
            <% end %>
        </h2>
        <p>
        19 years old
        </p>
        <p>
          <%= user.sport %> - <%= user.position %> - <%= user.footedness %>-footed
        </p>
        <div class="card-header">
          <%= cl_image_tag user.photos.first&.key %>
        </div>  
        <div class="user-info">
        <br>
            <p>
            <i class="fas fa-weight-hanging"></i> <%= user.weight %>kg
            <i class="fas fa-text-height"></i> <%= user.height %>cm
            <i class="fas fa-birthday-cake"> </i> 03/08/1991
            </p>
            <p><%= user.description%></p>
        </div>
        <div class="buttons">
          <p><% if user == current_user %>
            <a class="btn-show"><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary' %></a>
          <% end %>
          <% if user == current_user %>
            <a class="btn-show"><%= link_to "delete", user_path(user), method: :delete, class: 'btn btn-primary' %></a>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>