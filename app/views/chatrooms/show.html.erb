
<div class="col-9">
  <div class="chat-room">
  
    <h1>
    chatroom nÂ°<%= @chatroom.id %> <%= @chatroom.name %></h1>
    <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
      <% @chatroom.messages.each do |message| %>
        <div class="message mb-2 <%= 'me' if message.user == current_user %>">
          <div class="content-container" id="message-<%= message.id %>">
              <div class="content">
                <p><%= message.content %></p>
              </div>
              <i class="author">
                <span><%= message.user.first_name %></span>
                <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
              </i>
          </div>    
        </div>
        <br>
      <% end %>
    <br>
    <div class="chat-box">
        <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
        <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}" %>
      <% end %>
    </div>
    </div>
  </div>  
</div>
